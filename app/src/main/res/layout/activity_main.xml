<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.student.test1.MainActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nameET"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="fill"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Imię"
        android:textSize="18sp" />




    <EditText
        android:id="@+id/nameET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView4"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/surnameET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/nameET"
        android:layout_toEndOf="@+id/textView5"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/surnameET"
        android:layout_below="@+id/textView4"
        android:gravity="fill"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Nazwisko"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/amountOfGradesET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/surnameET"
        android:layout_toEndOf="@+id/textView6"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/amountOfGradesET"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/surnameET"
        android:gravity="fill"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Liczba ocen"
        android:textSize="18sp" />

    <Button
        android:id="@+id/gradesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/amountOfGradesET"
        android:text="Oceny" />

    <TextView
        android:id="@+id/averageGradeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/gradesButton"
        android:padding="5dp"
        android:textSize="18sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/gradeOKButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Super :)"
        android:visibility="invisible"
        android:layout_below="@+id/averageGradeTV"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/gradeNotOKButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/gradeOKButton"
        android:text="Tym razem mi nie poszło"
        android:visibility="invisible" />

</RelativeLayout>
